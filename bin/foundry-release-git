#!/usr/bin/env node
// Load in our dependencies
var FoundryReleaseBase = require('foundry-release-base');
var foundryReleaseGit = require('../');
var pkg = require('../package.json');

// Define our parser
var program = new FoundryReleaseBase({
  commit: function (params) {
    foundryReleaseGit.commit(params, process.exit);
  },
  publish: function (params) {
    foundryReleaseGit.publish(params, process.exit);
  }
});
program.version(pkg.version);

// Parse our CLI arguments
program.parse(process.argv);
